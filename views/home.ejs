<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Home Page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      /* Ensures the image fits perfectly within the card */
      .card-img-top {
        height: 200px; /* Reduced height */
        width: 100%; /* Restrict width to the card's width */
        object-fit: cover; /* Ensures image scales proportionally */
        border-top-left-radius: calc(0.25rem - 1px);
        border-top-right-radius: calc(0.25rem - 1px);
      }
      /* Padding around columns */
      .col {
        padding: 10px;
      }
      /* Define card styling and dimensions */
      .card {
        width: 100%; /* Card takes the full width of its column */
        max-width: 24rem; /* Limits card width to a reasonable size */
        margin: 0 auto; /* Centers the card horizontally */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
      }
      .card:hover {
        transform: scale(1.05);
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container mt-3">
      <!-- Bootstrap responsive grid -->
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card">
            <!-- Image section -->
            <img
              src="<%= blog.coverImageURL %>"
              class="card-img-top"
              alt="..."
            />
            <!-- Card body section -->
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
    <%- include('./partials/scripts') %>
  </body>
</html>
